---
import ShapeDiv from "./ShapeDiv.astro";
const { hero_text } = Astro.props;
---

<script>
  let max = 50;
  window.addEventListener("load", randNumber);

  function randNumber() {
    let rand = Math.ceil(Math.random() * max);
    rand = rand + "%";

    document.querySelector(".imgMe").style.marginLeft = `${rand}`;
  }
</script>

<article class="full-bleed hero">
  <div>
    <img
      class="imgMe"
      src="/img/sittingme.png"
      alt="billede af person som sidder pÃ¥ tekst"
    />

    <h1>{hero_text}</h1>
  </div>
</article>

<style>
  @media (800px > width) {
    .imgMe {
      display: none;
    }

    .hero {
      min-height: 0vh;
    }
  }

  .hero {
    min-height: 90vh;
    background-color: var(--yellow);
    z-index: -2;

    & div {
      display: flex;
      flex-flow: column;
      justify-content: center;
    }

    & h1 {
      position: relative;
      z-index: 0;
      font-size: calc(var(--fluid-h1) * 2);
      text-transform: uppercase;
      text-align: center;
    }
    & img {
      position: relative;
      aspect-ratio: 1/2;
      object-fit: contain;
      width: 10%;
      height: auto;
      margin-bottom: calc(var(--fluid-h1) * -2);
      /* margin-left: 30%; */
      z-index: 1;
    }
  }

  article {
    padding: 100px 0;
  }
</style>
